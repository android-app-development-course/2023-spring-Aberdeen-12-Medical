<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_sign_in"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/font_color"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />


    <EditText
        android:id="@+id/account_sign_in"
        android:layout_width="305dp"
        android:layout_height="62dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="Create a account"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194" />

    <TextView
        android:id="@+id/account_sign_in_Alert"
        android:layout_width="142dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/account_sign_in"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/account_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/account_sign_in" />

    <EditText
        android:id="@+id/password_sign_in"
        android:layout_width="305dp"
        android:layout_height="62dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="Please type you password"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/password_sign_in_Alert_1"
        android:layout_width="305dp"
        android:layout_height="24dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="@+id/password_sign_in"
        app:layout_constraintStart_toStartOf="@+id/password_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/password_sign_in" />


    <EditText
        android:id="@+id/password_sign_in_Again"
        android:layout_width="305dp"
        android:layout_height="62dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="Please confirm your password"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <TextView
        android:id="@+id/password_sign_in_Alert_2"
        android:layout_width="305dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@+id/password_sign_in_Again"
        app:layout_constraintStart_toStartOf="@+id/password_sign_in_Again"
        app:layout_constraintTop_toBottomOf="@+id/password_sign_in_Again" />

    <CheckBox
        android:id="@+id/isDoctor_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是医生"
        android:textColor="@color/font_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />


    <EditText
        android:id="@+id/verificationCode_sign_in"
        android:layout_width="93dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/edit_background"
        android:hint="code"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687" />

    <TextView
        android:id="@+id/verificationCode_sign_in_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/verificationCode_sign_in"
        app:layout_constraintStart_toEndOf="@+id/verificationCode_sign_in"
        app:layout_constraintTop_toTopOf="@+id/verificationCode_sign_in" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="108dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:text="建议使用手机号"
        app:layout_constraintEnd_toEndOf="@+id/account_sign_in"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/account_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/account_sign_in" />

</androidx.constraintlayout.widget.ConstraintLayout>