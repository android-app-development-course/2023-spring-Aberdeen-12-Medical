<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/searchEdit"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:hint="anything you want"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/searchEdit"
        app:layout_constraintStart_toEndOf="@+id/searchEdit"
        app:layout_constraintTop_toTopOf="@+id/searchEdit"
        app:srcCompat="@android:drawable/ic_menu_search" />





    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot clinic"
        android:textColor="@color/font_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />



    <ScrollView
        android:id="@+id/slideView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageViewguizhong"
                    android:tag="归终"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/guizhong"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="36dp" />

                <ImageView
                    android:id="@+id/imageViewmei"
                    android:tag="雷电影"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/mei"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="36dp" />

            </TableRow>

            <TableRow
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageViewnilu"
                    android:tag="妮露"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/nilu"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="277dp" />

                <ImageView
                    android:id="@+id/imageViewfengyuanwanye"
                    android:tag="枫原万叶"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/fengyuanwanye"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="277dp" />

            </TableRow>

            <TableRow
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageViewnuoaier"
                    android:tag="诺艾尔"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/nuoaier"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="277dp" />

                <ImageView
                    android:id="@+id/imageViewabeidduo"
                    android:tag="阿贝多"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/abeidduo"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="277dp" />

            </TableRow>

            <TableRow
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageViewmona"
                    android:tag="莫娜"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/mona"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="277dp" />

                <ImageView
                    android:id="@+id/imageViewheita"
                    android:tag="黑塔"
                    android:padding="10dp"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/heita"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="277dp" />

            </TableRow>

        </TableLayout>

    </ScrollView>




    <View
        android:id="@+id/tagView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/half_circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tagView"
        app:layout_constraintTop_toTopOf="@+id/tagView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tagLayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tagImage1"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:background="@drawable/user_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19" />

            <TextView
                android:id="@+id/tagText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="待定"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/tagImage1"
                app:layout_constraintStart_toStartOf="@+id/tagImage1"
                app:layout_constraintTop_toBottomOf="@+id/tagImage1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tagLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tagImage2"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:background="@drawable/main_highlight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19" />

            <TextView
                android:id="@+id/tagText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color"
                android:text="攻略"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/tagImage2"
                app:layout_constraintStart_toStartOf="@+id/tagImage2"
                app:layout_constraintTop_toBottomOf="@+id/tagImage2" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tagLayout3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tagImage3"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:background="@drawable/me_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.153" />

            <TextView
                android:id="@+id/tagText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="我"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/tagImage3"
                app:layout_constraintStart_toStartOf="@+id/tagImage3"
                app:layout_constraintTop_toBottomOf="@+id/tagImage3" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout >